<html>
<head>
	<!-- Bootstrap CDN -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <style>
    	body{
    		background-color: #E9EAED;
    	}
    	div.middle_column{
    		background-color: white;
    		border: solid silver 1px;
    		border-radius: 3px;
    		padding: 10px;
    		margin: 5px;
    	}
    	div.right_column{
    		background-color: white;
    		border: solid silver 1px;
    		border-radius: 3px;
    		padding: 10px;
    		margin: 5px;
    		text-align: right;
    	}
    	.post_status{
    		width: 100%;
    		border: none;
    		border-bottom: solid silver 1px;
    	}
    	.post_button{
    		height: 30px;
    		width: 100%;
    	}
    </style>
</head>
<body>
	<!-- Navbar Render -->
	<%= render 'partials/navbar' %>
	<div class='container'>
        <h1>Editing <%= @user.first_name %> <%= @user.last_name %></h1>
        <form action='/users/<%= @user.id %>' method='post' enctype='multipart/form-data'>
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
            <input type="hidden"name="_method"value="put">
            <label>First Name</label>
            <input type='text' name='user[first_name]' value='<%= @user.first_name %>'><br>
            <label>Last Name</label>
            <input type='text' name='user[last_name]' value='<%= @user.last_name %>'><br>
            <label>Email</label>
            <input type='text' name='user[email]' value='<%= @user.email %>'><br>
            <label class='pull-left'>Profile Picture</label>
            <input type='file' name='user[profile_pic]'><br><br>
            <input type='submit' value='Update' class='btn btn-primary'>
        </form>
    </div>
</body>
</html>