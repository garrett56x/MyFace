<html>
<head>
	<!-- Bootstrap CDN -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <style>
    	body{
    		background-color: #E9EAED;
    	}
    	div.middle_column{
    		background-color: white;
    		border: solid silver 1px;
    		border-radius: 3px;
    		padding: 10px;
    		margin: 5px;
    	}
    	div.right_column{
    		background-color: white;
    		border: solid silver 1px;
    		border-radius: 3px;
    		padding: 10px;
    		margin: 5px;
    	}
    	.post_status{
    		width: 100%;
    		border: none;
    		border-bottom: solid silver 1px;
    	}
    	.post_button{
    		height: 30px;
    		width: 100%;
    	}
    	.user_pic{
    		height: 50px;
    		width: 50px;
    		border: solid black 1px;
    		border-radius: 5px;
    	}
    </style>
</head>
<body>
	<!-- Navbar Render -->
	<%= render 'partials/navbar' %>
	<div class='container'>
		<div class='row'>
			<div class='col-md-2'>
				<div class='row'>
					<div class='col-md-4'>
						<%= image_tag @user.profile_pic.url , class: "display user_pic" %>
					</div>
					<div class='col-md-8'>
						<a href="/users/<%= @user.id %>"><%= @user.first_name %> <%= @user.last_name %></a>
					</div>
				</div>
				<p>
					Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
					tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
					quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
					consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
					cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
					proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
				</p>
			</div>
			<div class='col-md-6'>
				<h3>Update Status:</h3>
				<div class='middle_column'>
					<form action='/posts' method='post'>
						<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
						<textarea class='post_status' rows='4' placeholder="What's on your mind?" name='status'></textarea>
						<div class='post_button'>
							<button class='btn btn-primary pull-right'>Post</button>
						</div>
					</form>
				</div>
				<% @posts.each do |post| %>
					<div class='middle_column'>
						<div class='row'>
							<div class='col-md-1' style='margin-right: 10px'>
								<%= image_tag post.user.profile_pic.url , class: "display user_pic" %>
							</div>
							<div class='col-md-8'>
								<h4><a href="/users/<%= post.user.id %>"><%= post.user.first_name %> <%= post.user.last_name %></a></h4>
							</div>
						</div>
						<p><%= post.content %></p>
					</div>
				<% end %>
			</div>
			<div class='col-md-3 right_column'>
				<h4>People You May Know:</h4>
				<% @users.each do |user| %>
					<p>
						<form action='/invitations' method='post'>
							<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
							<input type='hidden' name='invitee' value='<%= user.id %>'>
							<%= image_tag user.profile_pic.url , class: "display user_pic" %>
							<a href="/users/<%= user.id %>"><%= user.first_name %> <%= user.last_name %></a>
							<button class='btn btn-primary btn-xs'>Add Friend</button>
						</form>
					</p>
				<% end %>
			</div>
		</div>
	</div>
</body>
</html>